<div id="wrapper">
    <header id="header">
        <div class="container">
            <!-- Menü -->
            <a class="open" href="#nav"><img src="{{ templateDir }}/img/nav_burger.png" class="open"/></a>
            <img id="menueBig" src="{{ templateDir }}/img/globus.png"  />

            <!-- Logo -->
            <div id="logo">
                <a href="{{ route('index') }}"><img src="{{ templateDir }}/img/logo_smartphone.png"/></a>
                <p>Mit uns fliegen Sie raus ...</p>
            </div> <!-- #logo -->
            <div id="logo_big" class="left">
                <a href="{{ route('index') }}"><img src="{{ templateDir }}/img/logo.jpg"/></a>
            </div> <!-- #logo_big -->

            <!-- Hotline -->
            <div id="hotline" class="right">
                <span>Direktkontakt zum Spezialisten<br/><b>T 0163-5605597</b></span>
            </div>
            <p class="clear"></p>

            <!-- Navigation small -->
            <div id="navigation">
                <div id="nav">
                    {% for continent in continents %}
                        <div class="kontinent">
                            <table width="200">
                                {% for region in continent.getRegionList %}
                                    {% set regionId = {'regionId': region.getRegionId} %}
                                    <tr>
                                        <td><a href="{{ route('index', regionId) }}">{{ region.getName | convert_encoding('UTF-8', 'ISO-8859-1') }}</a></td>
                                    </tr>
                                {% endfor %}
                            </table>

                            <img src="{{ continent.getBild }}"/>
                        </div> <!-- .kontinent -->
                    {% endfor %}
                </div> <!-- #nav -->
            </div> <!-- #navigation -->
        </div> <!-- .container -->
    </header>
    <div id="teaser" class="js-teaser">
        {{ include('partial/region_remove.twig') }}
        <!-- Navigation big -->
        <div id="navigationBig">
            <div class="left">
                {% for continent in continents %}
                    <p class="continent" data-continent-id="{{ continent.getContinentId }}" data-continent-bild="{{ continent.getBild }}">{{ continent.getName| convert_encoding('UTF-8', 'ISO-8859-1') }}</p>
                {% endfor %}
            </div> <!-- .left -->

            <div id="regionenAusgabe" class="left">
                <!-- Platzhalter Welt einfügen -->
                <img src="{{ templateDir }}/img/kategorie/world.png" width="800" style="margin-top:71px;"
                     id="world_map"/>
            </div> <!-- #regionenAusgabe -->
        </div> <!-- #navigationBig -->
        <img src="{{ teaserBild }}"/>
    </div> <!-- #teaser -->

